{{define "versions"}}
{{template "layout" .}}
{{end}}

{{define "content"}}
<a href="{{.BasePath}}/" class="back-link">← Mod一覧に戻る</a>

<div class="card">
    <div class="card-header">
        <h2>バージョン一覧: {{.Mod.Name}}</h2>
        <a href="{{.BasePath}}/mods/{{.Mod.ID}}/versions/new" class="btn btn-primary">+ 新規バージョン</a>
    </div>
    <div class="card-body">
        {{if .Versions}}
        <!-- PC View -->
        <div class="hidden md:block table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>バージョン</th>
                        <th>作成日</th>
                        <th>対象AU</th>
                        <th>ファイル数</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Versions}}
                    <tr>
                        <td><code>{{.ID}}</code></td>
                        <td>{{.CreatedAt.Format "2006/01/02"}}</td>
                        <td>
                            {{if .GameVersions}}
                            {{range $i, $v := .GameVersions}}
                            {{$v}}<br>
                            {{end}}
                            {{else}}
                            -
                            {{end}}
                        </td>
                        <td>{{len .Files}}</td>
                        <td class="actions">
                            {{if eq .ID $.Mod.LatestVersion}}
                            <span class="status-badge status-latest">Latest</span>
                            {{else}}
                            <button class="btn btn-secondary" onclick="setLatestVersion('{{.ID}}')">Set Latest</button>
                            {{end}}
                            <a href="{{$.BasePath}}/mods/{{$.Mod.ID}}/versions/{{.ID}}/edit" class="btn btn-secondary">編集</a>
                            <button class="btn btn-danger" onclick="deleteVersion('{{.ID}}')">削除</button>
                        </td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>

        <!-- Mobile View -->
        <div class="md:hidden space-y-4">
            {{range .Versions}}
            <div class="bg-white border rounded-lg shadow-sm overflow-hidden">
                <div class="p-4 flex justify-between items-center cursor-pointer" onclick="toggleAccordion('ver-{{.ID}}')">
                    <div>
                        <div class="font-bold text-lg font-mono">{{.ID}}</div>
                        <div class="text-xs text-gray-500">{{.CreatedAt.Format "2006/01/02"}}</div>
                    </div>
                    <div class="flex items-center gap-2">
                        {{if eq .ID $.Mod.LatestVersion}}
                        <span class="status-badge status-latest">Latest</span>
                        {{end}}
                        <div id="ver-{{.ID}}-icon" class="text-gray-400 transition-transform duration-200">▼</div>
                    </div>
                </div>
                <div id="ver-{{.ID}}" class="hidden border-t bg-gray-50 p-4">
                    <div class="grid grid-cols-2 gap-2 text-sm mb-4">
                        <div class="text-gray-500">対象AU</div>
                        <div>
                            {{if .GameVersions}}
                            {{range $i, $v := .GameVersions}}
                            {{$v}}<br>
                            {{end}}
                            {{else}}
                            -
                            {{end}}
                        </div>
                        <div class="text-gray-500">ファイル数</div>
                        <div>{{len .Files}}</div>
                    </div>
                    <div class="flex flex-wrap gap-2 justify-end">
                        {{if ne .ID $.Mod.LatestVersion}}
                        <button class="btn btn-secondary btn-sm" onclick="setLatestVersion('{{.ID}}')">Set Latest</button>
                        {{end}}
                        <a href="{{$.BasePath}}/mods/{{$.Mod.ID}}/versions/{{.ID}}/edit" class="btn btn-secondary btn-sm">編集</a>
                        <button class="btn btn-danger btn-sm" onclick="deleteVersion('{{.ID}}')">削除</button>
                    </div>
                </div>
            </div>
            {{end}}
        </div>
        {{else}}
        <div class="empty-state">
            バージョンがありません。「新規バージョン」ボタンから追加してください。
        </div>
        {{end}}
    </div>
</div>

{{end}}

{{define "scripts"}}
<script>
    const modId = '{{.Mod.ID}}';

    async function setLatestVersion(versionId) {
        try {
            await api(`/mods/${modId}/versions/${versionId}/latest`, 'POST');
            showToast('最新バージョンを設定しました');
            location.reload();
        } catch (error) {
            showToast(error.message, 'error');
        }
    }

    async function deleteVersion(versionId) {
        if (!confirm(`バージョン "${versionId}" を削除しますか？`)) return;
        try {
            await api(`/mods/${modId}/versions/${versionId}`, 'DELETE');
            showToast('バージョンを削除しました');
            location.reload();
        } catch (error) {
            showToast(error.message, 'error');
        }
    }
</script>
{{end}}