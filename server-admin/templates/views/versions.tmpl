{{define "versions"}}
{{template "layout" .}}
{{end}}

{{define "content"}}
<a href="/" class="back-link">← Mod一覧に戻る</a>

<div class="card">
    <div class="card-header">
        <h2>バージョン一覧: {{.Mod.Name}}</h2>
        <a href="/mods/{{.Mod.ID}}/versions/new" class="btn btn-primary">+ 新規バージョン</a>
    </div>
    <div class="card-body">
        {{if .Versions}}
        <table>
            <thead>
                <tr>
                    <th>バージョン</th>
                    <th>作成日</th>
                    <th>対象AU</th>
                    <th>ファイル数</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                {{range .Versions}}
                <tr>
                    <td><code>{{.ID}}</code></td>
                    <td>{{.CreatedAt.Format "2006/01/02"}}</td>
                    <td>
                        {{if .TargetVersion}}
                        {{range $k, $v := .TargetVersion}}
                        {{$k}}: {{$v}}<br>
                        {{end}}
                        {{else}}
                        -
                        {{end}}
                    </td>
                    <td>{{len .Files}}</td>
                    <td class="actions">
                        {{if eq .ID $.Mod.LatestVersion}}
                        <span class="status-badge status-latest">Latest</span>
                        {{else}}
                        <button class="btn btn-secondary" onclick="setLatestVersion('{{.ID}}')">Set Latest</button>
                        {{end}}
                        <a href="/mods/{{$.Mod.ID}}/versions/{{.ID}}/edit" class="btn btn-secondary">編集</a>
                        <button class="btn btn-danger" onclick="deleteVersion('{{.ID}}')">削除</button>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
        {{else}}
        <div class="empty-state">
            バージョンがありません。「新規バージョン」ボタンから追加してください。
        </div>
        {{end}}
    </div>
</div>

{{end}}

{{define "scripts"}}
<script>
    const modId = '{{.Mod.ID}}';

    async function setLatestVersion(versionId) {
        try {
            await api(`/mods/${modId}/versions/${versionId}/latest`, 'POST');
            showToast('最新バージョンを設定しました');
            location.reload();
        } catch (error) {
            showToast(error.message, 'error');
        }
    }

    async function deleteVersion(versionId) {
        if (!confirm(`バージョン "${versionId}" を削除しますか？`)) return;
        try {
            await api(`/mods/${modId}/versions/${versionId}`, 'DELETE');
            showToast('バージョンを削除しました');
            location.reload();
        } catch (error) {
            showToast(error.message, 'error');
        }
    }
</script>
{{end}}