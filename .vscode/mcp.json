{
    "servers": {
        "io.github.upstash/context7": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "@upstash/context7-mcp@1.0.25"
            ],
            "env": {
                "CONTEXT7_API_KEY": "${input:CONTEXT7_API_KEY}"
            },
            "gallery": "https://api.mcp.github.com",
            "version": "1.0.0"
        },
        "Ref": {
            "url": "https://api.ref.tools/mcp?apiKey=${input:REF_API_KEY}",
            "type": "http"
        }
    },
    "inputs": [
        {
            "id": "CONTEXT7_API_KEY",
            "type": "promptString",
            "description": "API key for authentication",
            "password": true
        },
        {
            "id": "REF_API_KEY",
            "type": "promptString",
            "description": "API key for Ref tools",
            "password": true
        }
    ]
}